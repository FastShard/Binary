cd ~/

function set_theme {
    if [ -d ".config/fastshard/$1" ]; then
        echo "ðŸ¢’ $1 Theme exists"
        cd ~/.config/fastshard/$1 && sudo cp -r * ~/.config/
        echo "ðŸ¢’ $1 Has been set as the current Theme"
    else
        echo "ðŸ¢’ Error: Theme $1 is not Installed"
        echo "ðŸ¢’ Install the Themes from github.com/FastShard/Themes"
    fi
}

function set_perms {
    sudo chmod +x ~/.config/bspwm/*
    sudo chmod +x ~/.config/bspwm/bar/*
    sudo chmod +x ~/.config/bspwm/alacritty/*
    sudo chmod +x ~/.config/bspwm/rofi/*/*
    sudo chmod +x ~/.config/zathura/*
    sudo chmod +x ~/.config/dunst/*
}

function restart_wm {
    sudo bspc wm -r
}

set_theme $1
set_perms
restart_wm
