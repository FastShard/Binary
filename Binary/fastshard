#!/bin/bash

if [ -d "~/.config/fastshard/$1" ]; then
  echo "ğŸ¢’ $1 Theme exists"
  cd ~/.config/fastshard/$1 && cp -r * ~/.config/ && sudo chmod +x ~/.config/* && sudo chmod +x ~/.>
  echo "ğŸ¢’ $1 Has been set as the current Theme"
else
  echo "ğŸ¢’ Error: Theme $1 is not Installed"
  echo "ğŸ¢’ Install the Themes from github.com/FastShard/Themes"
fi
